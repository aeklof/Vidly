@model Vidly.ViewModel.AllMoviesViewModel
@{
    ViewBag.Title = "All Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var isMovies = Model.Movies.Count != 0;
}


@{
    if (isMovies)
    {
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Movies</th>
        </tr>
        </thead>
        @foreach (var movie in Model.Movies)
        {
            <tbody>
                <tr>
                    <th scope="row">@movie.Name</th>
                </tr>
            </tbody>
        }
    </table>
    }
    else
    {
        <text>There is no movies to be displayed</text>
    }
}
